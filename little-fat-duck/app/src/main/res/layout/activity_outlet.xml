                android:fontFamily="@font/single_day"
                android:paddingTop="10dp"
                android:text="@string/kl"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/single_day"
                android:paddingTop="10dp"
                android:text="@string/mytown"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="241dp"
                android:paddingTop="10dp"
                app:srcCompat="@drawable/lfd_mytown_shopping" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/single_day"
                android:paddingTop="10dp"
                android:text="@string/mytown_add"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/single_day"
                android:paddingTop="36dp"
                android:text="@string/bangsar"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="241dp"
                android:paddingTop="10dp"
                app:srcCompat="@drawable/lfd_bangsar" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/single_day"
                android:paddingTop="10dp"
                android:text="@string/bangsar_add"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/single_day"
                android:paddingTop="36dp"
                android:text="@string/seri_kembangan"
                android:textAlignment="center"
